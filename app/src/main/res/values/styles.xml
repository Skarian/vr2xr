<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextAppearance.Vr2xr.Launcher.Status" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/launcher_text_primary</item>
        <item name="android:textSize">@dimen/launcher_status_text_size</item>
    </style>

    <style name="TextAppearance.Vr2xr.Launcher.RuntimeStatus" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/launcher_text_secondary</item>
        <item name="android:textSize">@dimen/launcher_body_text_size</item>
    </style>

    <style name="TextAppearance.Vr2xr.Launcher.Footer" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/launcher_text_secondary</item>
        <item name="android:textSize">@dimen/launcher_footer_text_size</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextAppearance.Vr2xr.Setup.Instruction" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/launcher_text_primary</item>
        <item name="android:textSize">@dimen/launcher_status_text_size</item>
    </style>

    <style name="TextAppearance.Vr2xr.Setup.Status" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/launcher_text_secondary</item>
        <item name="android:textSize">@dimen/launcher_body_text_size</item>
    </style>

    <style name="Widget.Vr2xr.Launcher.Input" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/launcher_card_background</item>
        <item name="boxCornerRadiusTopStart">@dimen/launcher_input_corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/launcher_input_corner_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/launcher_input_corner_radius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/launcher_input_corner_radius</item>
        <item name="boxStrokeColor">@color/launcher_outline</item>
        <item name="hintTextColor">@color/launcher_text_secondary</item>
    </style>

    <style name="Widget.Vr2xr.Launcher.PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/catppuccin_mocha_blue</item>
        <item name="android:textColor">@color/catppuccin_mocha_mantle</item>
        <item name="cornerRadius">@dimen/launcher_button_corner_radius</item>
    </style>

    <style name="Widget.Vr2xr.Launcher.HelpButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/launcher_text_primary</item>
        <item name="strokeColor">@color/catppuccin_mocha_blue</item>
        <item name="cornerRadius">@dimen/launcher_help_button_size</item>
    </style>

    <style name="TextAppearance.Vr2xr.Player.TimeLabel" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/player_controls_text_secondary</item>
        <item name="android:textSize">@dimen/player_controls_time_text_size</item>
    </style>

    <style name="TextAppearance.Vr2xr.Player.DialogItem" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/player_controls_text_primary</item>
    </style>

    <style name="TextAppearance.Vr2xr.Player.DialogTitle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/player_controls_text_primary</item>
    </style>

    <style name="Widget.Vr2xr.Player.SettingsButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:minHeight">@dimen/player_controls_button_min_height</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/player_controls_text_primary</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="backgroundTint">@color/player_controls_button_surface</item>
        <item name="cornerRadius">@dimen/player_controls_button_corner_radius</item>
        <item name="iconTint">@color/player_controls_button_icon</item>
        <item name="iconPadding">8dp</item>
        <item name="strokeColor">@color/player_controls_button_outline</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="Widget.Vr2xr.Player.IconOnlyButton" parent="Widget.Vr2xr.Player.SettingsButton">
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="iconPadding">0dp</item>
        <item name="iconSize">@dimen/player_controls_icon_size</item>
        <item name="iconGravity">textTop</item>
    </style>

    <style name="Widget.Vr2xr.Player.TransportIconButton" parent="Widget.Vr2xr.Player.IconOnlyButton" />

    <style name="Widget.Vr2xr.Player.PlayPauseButton" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="backgroundTint">@color/player_controls_play_button</item>
        <item name="cornerRadius">@dimen/player_controls_button_corner_radius</item>
        <item name="iconGravity">textTop</item>
        <item name="iconPadding">0dp</item>
        <item name="iconSize">@dimen/player_play_pause_icon_size</item>
        <item name="iconTint">@color/player_controls_play_button_icon</item>
    </style>

    <style name="Widget.Vr2xr.Player.DialogActionButton" parent="Widget.Vr2xr.Player.SettingsButton">
        <item name="android:textColor">@color/player_controls_play_button_icon</item>
        <item name="backgroundTint">@color/player_controls_play_button</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <style name="Widget.Vr2xr.Player.DialogCloseButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/player_dialog_close_text</item>
    </style>

    <style name="ThemeOverlay.Vr2xr.Player.SettingsDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:colorBackground">@color/player_dialog_surface</item>
        <item name="android:textColorPrimary">@color/player_controls_text_primary</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.Vr2xr.Player.DialogCloseButton</item>
        <item name="colorSurface">@color/player_dialog_surface</item>
        <item name="materialAlertDialogTitleTextStyle">@style/TextAppearance.Vr2xr.Player.DialogTitle</item>
    </style>
</resources>
